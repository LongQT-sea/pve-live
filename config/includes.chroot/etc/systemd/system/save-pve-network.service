[Unit]
Description=Save Proxmox VE network config before shutdown
DefaultDependencies=no
Before=shutdown.target reboot.target halt.target

[Service]
Type=oneshot
ExecStart=/bin/bash /usr/local/bin/setup-pve-network.sh stop
RemainAfterExit=yes

[Install]
WantedBy=halt.target reboot.target shutdown.target
